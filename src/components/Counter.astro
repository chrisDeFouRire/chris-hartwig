<div class="text-center">
  <p class="text-2xl font-semibold mb-4">Count: <span id="count-value">0</span></p>
  <div class="space-x-4">
    <button
      class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded increment-btn"
    >
      Increment
    </button>
    <button
      class="bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded reset-btn"
    >
      Reset
    </button>
  </div>
</div>

<script>
  let count = 0;
  const countValue = document.getElementById('count-value');
  const incrementBtn = document.querySelector('.increment-btn');
  const resetBtn = document.querySelector('.reset-btn');

  if (countValue && incrementBtn && resetBtn) {
    incrementBtn.addEventListener('click', () => {
      count++;
      countValue.textContent = String(count);
    });

    resetBtn.addEventListener('click', () => {
      count = 0;
      countValue.textContent = String(count);
    });
  }
</script>
