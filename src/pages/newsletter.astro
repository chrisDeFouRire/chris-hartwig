            <div class="h-2 w-2 rounded-full bg-primary"></div>
            <div class="h-2 w-2 rounded-full bg-primary/80"></div>
            <div class="h-2 w-2 rounded-full bg-primary/60"></div>
          </div>
        </div>
      </div>
    </div>
  </section>

