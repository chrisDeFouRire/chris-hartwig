import BaseLayout from "../layouts/BaseLayout.astro";
import NewsletterForm from "../components/NewsletterForm";

const features = [
  {
    title: "AI Coding Insights",
    description:
      "Weekly analysis of how AI is transforming the software development process",
    icon: "ðŸ¤–",
  },
  {
    title: "Practical Tutorials",
    description:
      "Hands-on guides for implementing AI tools in your development workflow",
    icon: "ðŸ’»",
  },
  {
    title: "Industry Trends",
