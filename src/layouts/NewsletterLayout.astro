---
import BaseLayout from './BaseLayout.astro';

const { title, description, pubDate, issueNumber, author = 'Chris Hartwig' } = Astro.props;
---

<BaseLayout title={`${title} | Vibe Software Engineering Newsletter`} description={description}>
  <article class="max-w-3xl mx-auto py-8 md:py-16">
    <header class="mb-10 border-b border-gray-200 pb-6">
      <div class="inline-block px-3 py-1 bg-primary/10 text-primary font-medium rounded-full mb-4">
        Newsletter Issue #{issueNumber}
      </div>
      <h1 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">{title}</h1>
      <div class="flex flex-wrap items-center text-sm text-gray-500">
        <span>{pubDate && new Date(pubDate).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}</span>
        <span class="mx-2">â€¢</span>
        <span>By {author}</span>
      </div>
    </header>

    <div class="prose prose-lg max-w-none">
      <slot />
    </div>

    <footer class="mt-12 pt-8 border-t border-gray-200">
      <div class="bg-primary/5 p-6 rounded-lg mb-8">
        <h3 class="font-bold text-lg text-gray-900 mb-2">Liked this issue?</h3>
        <p class="text-gray-600 mb-4">
          Share it with your network or forward to a colleague who might find it valuable.
        </p>
        <div class="flex flex-wrap gap-3">
          <a href="#" class="text-primary font-medium hover:underline">Share on Twitter</a>
          <a href="#" class="text-primary font-medium hover:underline">Share on LinkedIn</a>
          <a href="#" class="text-primary font-medium hover:underline">Forward Email</a>
        </div>
      </div>

      <div class="flex flex-col md:flex-row justify-between items-start md:items-center">
        <div class="mb-4 md:mb-0">
          <h3 class="font-bold text-gray-900 mb-2">Stay Updated</h3>
          <p class="text-gray-600">Subscribe to get the next issue delivered to your inbox.</p>
        </div>
        <a
          href="/newsletter"
          class="btn-primary inline-flex items-center justify-center px-6 py-3"
        >
          Subscribe to Newsletter
        </a>
      </div>
    </footer>
  </article>
</BaseLayout>