---
import { getCollection } from 'astro:content';
import BaseLayout from '../../../layouts/BaseLayout.astro';

const posts = await getCollection('blog');
const publishedPosts = posts.filter((post) => !post.data.draft);

// Collect all tags with counts
const tagMap = new Map<string, number>();
publishedPosts.forEach((post) => {
  if (post.data.tags) {
    post.data.tags.forEach((tag) => {
      tagMap.set(tag, (tagMap.get(tag) || 0) + 1);
    });
  }
});

// Sort tags by count (descending), then alphabetically
const tags = Array.from(tagMap.entries())
  .sort((a, b) => {
    if (b[1] !== a[1]) return b[1] - a[1];
    return a[0].localeCompare(b[0]);
  });
---

<BaseLayout
  title="Tags | Blog"
  description="Browse blog posts by topic tags"
>
  <section class="section">
    <div class="max-w-4xl mx-auto">
      <div class="text-center mb-12">
        <h1 class="text-3xl md:text-4xl font-bold mb-4">All Tags</h1>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto">
          Browse articles by topic
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        {tags.map(([tag, count]) => (
          <a
            href={`/blog/tags/${tag}/`}
            class="card p-6 hover:shadow-md transition-shadow block no-underline"
          >
            <div class="flex items-center justify-between">
              <span class="text-lg font-semibold text-gray-900">{tag}</span>
              <span class="text-sm text-gray-500 bg-gray-100 px-2 py-1 rounded-full">
                {count} {count === 1 ? 'post' : 'posts'}
              </span>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>
</BaseLayout>

